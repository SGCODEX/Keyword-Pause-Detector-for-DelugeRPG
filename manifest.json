{
  "manifest_version": 3,
  "name": "Keyword Pause Detector for DelugeRPG",
  "version": "2.0",
  "description": "Pauses movement when certain type of Pok√©mon Keywords appear",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["keywords.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
